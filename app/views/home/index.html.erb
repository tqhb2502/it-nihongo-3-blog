<h4 class='mb-4 mt-4'>
  <span>News Feed</span>
</h4>

<% @posts.order(id: :desc).each do |post| %>
  <% if post.published? %>
    <%= link_to post_path(post.id), class: 'text-decoration-none' do %>
      <div class='card mb-3 post-card'>
        <div class='card-body'>
          <div class='row'>
            
            <div class='col'>
              <% if post.header_image.present? %>
                <div class='header-img' style='background-image: url(<%= url_for(post.header_image) %>);'></div>
              <% end %>
            </div>
            
            <div class='col-md-9'>
              <div class='row'>
                <div class='col-lg-10'>
                  <span class='badge badge-primary mb-3'>Published by <%= post.author.email %></span>
                  <h5 class='card-title mb-2 text-dark'><%= post.title %></h5>
                  <%= simple_format post.description, class: 'text-secondary mb-0' %>
                </div>
                <div class='col text-center text-secondary'>
                  <h3 class='mb-0'><i class="fa-solid fa-thumbs-up"></i></h3>
                  <h5 class='mb-0'><%= post.likes.count %></h5>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
